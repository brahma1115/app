<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AnomalyDetectionActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_anomaly_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton_anomaly_detection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anomaly Detection"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/backButton_anomaly_detection"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/graphIcon_anomaly_detection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_anomaly_detection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="100dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detected Today"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="100dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.8K"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patterns Learned"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:minHeight="100dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96%"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Anomaly Graph -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â— Monitoring"
                        android:textColor="#4CAF50"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/img_56"
                        android:layout_marginTop="24dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detected Anomalies"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <!-- Waveform Irregularity -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anomaly_card_background"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/warning_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_57"/>

                    <TextView
                        android:id="@+id/waveform_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waveform Irregularity"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/warning_icon_1"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:42:15"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:id="@+id/waveform_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unusual pressure spike detected during expiration phase."
                        android:layout_below="@id/waveform_title"
                        android:layout_alignStart="@id/waveform_title"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/ai_confidence_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Confidence: 94%"
                        android:layout_below="@id/waveform_description"
                        android:layout_alignStart="@id/waveform_title"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyze"
                        android:textColor="#6A1B9A"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/ai_confidence_1"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Flow Asynchrony -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anomaly_card_background"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/warning_icon_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_57"/>

                    <TextView
                        android:id="@+id/flow_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flow Asynchrony"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/warning_icon_2"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:38:22"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:id="@+id/flow_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient effort detected before trigger threshold."
                        android:layout_below="@id/flow_title"
                        android:layout_alignStart="@id/flow_title"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/ai_confidence_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Confidence: 88%"
                        android:layout_below="@id/flow_description"
                        android:layout_alignStart="@id/flow_title"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyze"
                        android:textColor="#6A1B9A"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/ai_confidence_2"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/mark_as_reviewed_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark All as Reviewed"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_check" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>