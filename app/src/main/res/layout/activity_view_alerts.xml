<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ViewAlertsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/status_normal_background"
                android:padding="8dp">

                <Button
                    android:id="@+id/activeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Active"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/historyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="History"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/escalatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Escalated"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- Alert Cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#DC3545"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/alertTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High Pressure"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2m ago"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/patientDetails1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe • ICU-01"
                            android:layout_below="@id/alertTitle1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Critical"
                            android:textColor="#DC3545"
                            android:background="@drawable/status_critical_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_below="@id/patientDetails1"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/dot_critical"
                            android:drawablePadding="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#007BFF"
                            android:layout_below="@id/patientDetails1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#FFC107"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/alertTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High RR"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15m ago"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/patientDetails2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jane Smith • ICU-02"
                            android:layout_below="@id/alertTitle2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warning"
                            android:textColor="#FFC107"
                            android:background="@drawable/status_warning_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_below="@id/patientDetails2"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/dot_warning"
                            android:drawablePadding="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#007BFF"
                            android:layout_below="@id/patientDetails2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#FFC107"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/alertTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low Battery"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h ago"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/patientDetails3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device V-882 • ICU-05"
                            android:layout_below="@id/alertTitle3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warning"
                            android:textColor="#FFC107"
                            android:background="@drawable/status_warning_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_below="@id/patientDetails3"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/dot_warning"
                            android:drawablePadding="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#007BFF"
                            android:layout_below="@id/patientDetails3"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#007BFF"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/alertTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calibration Due"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h ago"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/patientDetails4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System • -"
                            android:layout_below="@id/alertTitle4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info"
                            android:textColor="#007BFF"
                            android:background="@drawable/status_info_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_below="@id/patientDetails4"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/dot_info"
                            android:drawablePadding="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#007BFF"
                            android:layout_below="@id/patientDetails4"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>