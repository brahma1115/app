<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".SmartAlarmAIActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Alarm AI"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/backButton"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/shieldIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_38"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottom_navigation_smart_alarm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">
                    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="156" android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="TOTAL ALARMS" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#F3E5F5"
                    app:cardElevation="4dp">
                    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="89" android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="FALSE FILTERED" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardElevation="4dp">
                    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="67" android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="TRUE POSITIVES" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardElevation="4dp">
                    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="94.2%" android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="AI ACCURACY" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Alarm Classification -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm Classification"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/img_51" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_marginTop="16dp">
                        <LinearLayout android:gravity="center_vertical" android:layout_columnWeight="1" android:layout_margin="4dp">
                            <View android:background="#F44336" android:layout_width="12dp" android:layout_height="12dp"/>
                            <TextView android:text="True Critical" android:layout_marginStart="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:layout_columnWeight="1" android:layout_margin="4dp">
                            <View android:background="#FFC107" android:layout_width="12dp" android:layout_height="12dp"/>
                            <TextView android:text="True Warning" android:layout_marginStart="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:layout_columnWeight="1" android:layout_margin="4dp">
                            <View android:background="#9E9E9E" android:layout_width="12dp" android:layout_height="12dp"/>
                            <TextView android:text="False Positive" android:layout_marginStart="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="center_vertical" android:layout_columnWeight="1" android:layout_margin="4dp">
                            <View android:background="#E0E0E0" android:layout_width="12dp" android:layout_height="12dp"/>
                            <TextView android:text="Noise" android:layout_marginStart="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                     </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Alarm Fatigue Reduction -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm Fatigue Reduction"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <RelativeLayout android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/without_ai_label"
                            android:text="Without AI"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="#D1C4E9"
                            android:layout_width="150dp"
                            android:layout_height="16dp"
                            android:layout_toEndOf="@id/without_ai_label"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/with_ai_label"
                            android:text="With AI"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="#673AB7"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:layout_toEndOf="@id/with_ai_label"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI reduced alarm noise by 57% today"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recent AI Decisions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent AI Decisions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:text="SpO2 Drop" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:drawableStart="@drawable/ic_check_circle" android:text=" True Positive" android:textColor="#4CAF50" android:drawablePadding="4dp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">
                        <TextView android:text="98% Conf." android:background="@drawable/confidence_background" android:textColor="#673AB7" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="2m ago" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:text="Artifact Noise" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:drawableStart="@drawable/ic_cancel" android:text=" False Alarm" android:textColor="#F44336" android:drawablePadding="4dp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">
                        <TextView android:text="92% Conf." android:background="@drawable/confidence_background" android:textColor="#673AB7" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="15m ago" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:text="Lead Disconnect" android:textStyle="bold" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:drawableStart="@drawable/ic_check_circle" android:text=" True Positive" android:textColor="#4CAF50" android:drawablePadding="4dp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">
                        <TextView android:text="89% Conf." android:background="@drawable/confidence_background" android:textColor="#673AB7" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="28m ago" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_smart_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>