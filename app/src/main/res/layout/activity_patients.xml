<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PatientsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:id="@+id/patientsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/addPatientButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_22"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:queryHint="Search a patient"
                android:background="@drawable/search_bar_background"
                android:iconifiedByDefault="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/allButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:background="@drawable/filter_button_selected_background"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/criticalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Critical"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/filter_button_unselected_background"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/stableButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stable"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/filter_button_unselected_background"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/patient_cards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Patient 1: John Doe -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/patientIcon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_23"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/patientName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@id/patientIcon1"/>

                        <TextView
                            android:id="@+id/patientDetails1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: P001 • 65y"
                            android:layout_below="@id/patientName1"
                            android:layout_toEndOf="@id/patientIcon1"/>

                        <TextView
                            android:id="@+id/patientBed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bed: ICU-01"
                            android:layout_below="@id/patientDetails1"
                            android:layout_toEndOf="@id/patientIcon1"/>

                        <TextView
                            android:id="@+id/patientStatus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Critical"
                            android:textColor="#D32F2F"
                            android:background="@drawable/status_critical_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/patientName1"/>

                        <TextView
                            android:id="@+id/patientCondition1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ARDS"
                            android:layout_below="@id/patientStatus1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Patient 2: Jane Smith -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/patientIcon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_23"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/patientName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jane Smith"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@id/patientIcon2"/>

                        <TextView
                            android:id="@+id/patientDetails2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: P002 • 54y"
                            android:layout_below="@id/patientName2"
                            android:layout_toEndOf="@id/patientIcon2"/>

                        <TextView
                            android:id="@+id/patientBed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bed: ICU-02"
                            android:layout_below="@id/patientDetails2"
                            android:layout_toEndOf="@id/patientIcon2"/>

                        <TextView
                            android:id="@+id/patientStatus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Warning"
                            android:textColor="#FBC02D"
                            android:background="@drawable/status_warning_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/patientName2"/>

                        <TextView
                            android:id="@+id/patientCondition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COPD"
                            android:layout_below="@id/patientStatus2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Patient 3: Robert Johnson -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/patientIcon3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_23"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/patientName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Robert Johnson"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@id/patientIcon3"/>

                        <TextView
                            android:id="@+id/patientDetails3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: P003 • 72y"
                            android:layout_below="@id/patientName3"
                            android:layout_toEndOf="@id/patientIcon3"/>

                        <TextView
                            android:id="@+id/patientBed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bed: ICU-03"
                            android:layout_below="@id/patientDetails3"
                            android:layout_toEndOf="@id/patientIcon3"/>

                        <TextView
                            android:id="@+id/patientStatus3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Normal"
                            android:textColor="#388E3C"
                            android:background="@drawable/status_normal_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/patientName3"/>

                        <TextView
                            android:id="@+id/patientCondition3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post-Op"
                            android:layout_below="@id/patientStatus3"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>