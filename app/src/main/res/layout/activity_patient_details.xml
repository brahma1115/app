<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PatientDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Profile"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/backButton"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:id="@+id/editButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_27"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/patientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/patientId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: P001 . 65y . Male"
                        android:layout_below="@+id/patientName"/>
                    <TextView
                        android:id="@+id/patientStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Critical"
                        android:textColor="@android:color/white"
                        android:background="@android:color/holo_red_light"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:id="@+id/diagnosisLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIAGNOSIS"
                        android:layout_below="@+id/patientId"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/diagnosisValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Severe ARDS"
                        android:layout_below="@+id/diagnosisLabel"/>

                    <TextView
                        android:id="@+id/bedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BED"
                        android:layout_below="@+id/patientId"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/bedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ICU-01"
                        android:layout_below="@+id/bedLabel"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:id="@+id/admissionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADMISSION"
                        android:layout_below="@+id/diagnosisValue"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/admissionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 12, 2023"
                        android:layout_below="@+id/admissionLabel"/>

                    <TextView
                        android:id="@+id/physicianLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHYSICIAN"
                        android:layout_below="@+id/bedValue"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/physicianValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Wilson"
                        android:layout_below="@+id/physicianLabel"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#2D3748">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/aiAssessmentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI-POWERED ASSESSMENT"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/riskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Risk Patient"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/aiAssessmentLabel"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/viewVitalsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Vitals"/>
                <Button
                    android:id="@+id/ventilatorSettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ventilator Settings"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Vitals"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/heartRateIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icu" />

                        <TextView
                            android:id="@+id/heartRatePercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↑ 5%"
                            android:textColor="@android:color/holo_green_light"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:id="@+id/heartRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="102 bpm"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/heartRateIcon"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Rate"
                            android:layout_below="@+id/heartRateValue"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/spo2Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_10" />

                        <TextView
                            android:id="@+id/spo2Percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↓ 2%"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:id="@+id/spo2Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94%"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/spo2Icon"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SpO2"
                            android:layout_below="@+id/spo2Value"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventilator Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ventilatorMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC/VC Mode"
                        android:background="@drawable/mode_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="#007BFF"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ventilatorMode"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PEEP"
                                android:textColor="@android:color/darker_gray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.0"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="22sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FiO2"
                                android:textColor="@android:color/darker_gray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60%"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="22sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RR"
                                android:textColor="@android:color/darker_gray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="22sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ai_anomaly_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/aiIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_24"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Anomaly Detection"
                        android:layout_toEndOf="@+id/aiIcon"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/patient_history_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/historyIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_25"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient History"
                        android:layout_toEndOf="@+id/historyIcon"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/reportsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_26"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports &amp; Notes"
                        android:layout_toEndOf="@+id/reportsIcon"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
